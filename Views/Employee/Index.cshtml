@{
	ViewData["Title"] = "Index";
}

<h2>@ViewBag.Message</h2>

<table>
	<thead>
		<tr>
			<th>EmployeeId</th>
			<th>EmployeeName</th>
			<th>EmployeeAge</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in ViewBag.employees)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>@item.Age</td>
			</tr>
		}
	</tbody>
</table>